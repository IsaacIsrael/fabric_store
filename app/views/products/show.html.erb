<section id="product-show" class="container">
  <header class="mb-5 pb-4">
     <%= link_to "Back", products_path(page: params[:prev_page])   %>
  </header>
  <main>
    <header>
      <h1><small> <%= @product.name.capitalize %> </small></h1>
    </header>
    <div class="row flex-column flex-sm-row">
      <div class="col">
        <img id="btn-pswp" data-index="0" class="w-100 gallery-display" src="<%= @product.images[0].url%>" alt="<%= @product.name.capitalize%>">
        <div id="tab-gallery" class="row mt-3">
          <% @product.images.each_with_index do | image, index | %>
            <div class="col-3">
              <img class="w-100 img-thumbnail item-gallery" src="<%=image.url%>" alt="<%= @product.name.capitalize%>" data-index=<%=index%>>
            </div>
          <% end %>
        </div>
      </div>
       <div class="col">
          <h3 class="text-primary">
            <small><%= humanized_money_with_symbol @product.price %></small>
          </h3>
          <div class="body my-4">
             <%= @product.body&.html_safe %>
          </div>
          <div class="text-center text-sm-left">
             <%= link_to "Buy on Supplier", @product.url ,class:"btn btn-success btn-sm-block px-5 py-2", target: "_blank"  %>
          </div>
      </div>
    </div>
  </main>
  <div class="pswp" tabindex="-1" role="dialog" aria-hidden="true" data-images="<%= @product.images.to_json %> ">
    <div class="pswp__bg"></div>
    <div class="pswp__scroll-wrap">
      <div class="pswp__container">
          <div class="pswp__item"></div>
          <div class="pswp__item"></div>
          <div class="pswp__item"></div>
      </div>
      <div class="pswp__ui pswp__ui--hidden">
        <div class="pswp__top-bar">
          <div class="pswp__counter"></div>
          <button class="pswp__button pswp__button--close" title="Close (Esc)"></button>
          <button class="pswp__button pswp__button--share" title="Share"></button>
          <button class="pswp__button pswp__button--fs" title="Toggle fullscreen"></button>
          <button class="pswp__button pswp__button--zoom" title="Zoom in/out"></button>
          <div class="pswp__preloader">
              <div class="pswp__preloader__icn">
                <div class="pswp__preloader__cut">
                  <div class="pswp__preloader__donut"></div>
                </div>
              </div>
          </div>
        </div>
        <div class="pswp__share-modal pswp__share-modal--hidden pswp__single-tap">
            <div class="pswp__share-tooltip"></div>
        </div>
        <button class="pswp__button pswp__button--arrow--left" title="Previous (arrow left)">
        </button>
        <button class="pswp__button pswp__button--arrow--right" title="Next (arrow right)">
        </button>

        <div class="pswp__caption">
            <div class="pswp__caption__center"></div>
        </div>
      </div>
    </div>
  </div>
</section>


